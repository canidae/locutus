[% INCLUDE header.tmpl
  title = 'FIXME'
%]
[% IF album %]
    <h1>[% album.title %]</h1>
    <h2>Artist: <a href="artist.pl?arid=[% album.artist_id %]">[% album.artist_name %]</a></h2>
    <h3>Type: [% album.type %]</h3>
    <h3>Released: [% album.released %]</h3>
    <h3>MusicBrainz Album ID: <a href="http://musicbrainz.org/release/[% album.mbid %].html">[% album.mbid %]</a></h3>
    <h3>Custom artist: <input type="text" value="[% album.custom_artist_name %]" /></h3>
    [% IF tracks.size > 0 %]
    <h2>Tracks:</h2>
    <table>
    [% FOREACH track IN tracks %]
      <tr>
        <th>Score</th>
        <th><input type="radio" name="use_file[[% track.track_id %]]" value="-1" checked="checked" /></th>
        <th>[% track.tracknumber %]</th>
        <th>[% track.artist_name %]</th>
        <th>[% album.artist_name %]</th>
        <th>[% album.title %]</th>
        <th><a href="track.pl?trid=[% track.track_id %]">[% track.title %]</a></th>
        <th>[% track.duration %]</th>
      </tr>
      [% IF track.files.size > 0 %]
        [% FOREACH file IN track.files %]
      <tr>
        <td rowspan="2" style="background: #[% file.color %];">[% file.meta_score %]</td>
        <td rowspan="2"><input type="radio" name="use_file[[% track.track_id %]]" value="[% file.file_file_id %]" /></td>
        <td>[% file.file_tracknumber %]</td>
        <td>[% file.file_artist %]</td>
        <td>[% file.file_albumartist %]</td>
        <td>[% file.file_album %]</td>
        <td>[% file.file_title %]</td>
        <td>[% file.file_duration %]</td>
      </tr>
      <tr>
        <td colspan="6"><a href="file.pl?fiid=[% file.file_file_id %]">[% file.file_filename %]</a></td>
      </tr>
        [% END %]
      [% END %]
    [% END %]
    </table>
  [% END %]
[% END %]
[% INCLUDE footer.tmpl %]
